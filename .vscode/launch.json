{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug OpenJade",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/jade/openjade",
            "args": [
                // Add your arguments here, for example:
                // "-t", "tex",
                // "-o", "output.tex",
                // "input.sgml"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build"
        },
        {
            "name": "Debug OpenJade (with file)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/jade/openjade",
            "args": [
                "-t", "tex",
                "-o", "${workspaceFolder}/output.tex",
                "${file}"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build"
        },
        {
            "name": "Attach to OpenJade",
            "type": "lldb",
            "request": "attach",
            "program": "${workspaceFolder}/jade/openjade",
            "pid": "${command:pickMyProcess}"
        }
    ]
}
